{
  "name": "NgTorta",
  "version": "0.0.1",
  "manifest_version": 2,
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/jquery/jquery.min.js",
      "src/api.js",
      "src/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "cookies",
    "history",
    "activeTab",
    "tabs",
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "src/error_monitor.js",
        "js/jquery/jquery.min.js",
        "js/jquery-getpath.js",
        "js/devtools.js",
        "src/utils.js",
        "src/api.js",
        "src/inject.js"
      ]
    }
  ]
}